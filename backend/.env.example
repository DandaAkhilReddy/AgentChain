# KAMIKAZE Backend Environment Variables

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=kamikaze_app
DB_PASSWORD=your_secure_password
DB_NAME=kamikaze_zk_ecosystem
DB_CONNECTION_LIMIT=10

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Security
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Zero-Knowledge Configuration
ZK_CIRCUIT_DIR=./circuits
ZK_PROVING_KEY_PATH=./keys/proving_key.zkey
ZK_VERIFICATION_KEY_PATH=./keys/verification_key.json
TRUSTED_SETUP_PATH=./setup/powersOfTau28_hez_final_12.ptau

# Blockchain Configuration
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_api_key
LOCAL_RPC_URL=http://localhost:8545
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Contract Addresses (update after deployment)
KAMIKAZE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
STAKING_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
AGENT_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000

# AI API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key
GROQ_API_KEY=your_groq_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key
OPENAI_API_KEY=your_openai_api_key

# Redis Configuration (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/kamikaze.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://mango-tree-08f94b50f.2.azurestaticapps.net
CORS_CREDENTIALS=true

# Monitoring and Analytics
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
ANALYTICS_API_KEY=your_analytics_key

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_MOCK_ZK=false
TEST_DB_NAME=kamikaze_test
SEED_DATA=true